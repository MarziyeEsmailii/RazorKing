@{
    ViewData["Title"] = "مدیریت داده‌های تستی";
    Layout = "_LayoutModern";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card" style="background: rgba(26, 26, 26, 0.95); border: 1px solid rgba(212, 175, 55, 0.2); border-radius: 15px;">
                <div class="card-header" style="background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%); border-radius: 15px 15px 0 0;">
                    <h3 class="mb-0" style="color: #1a1a1a; font-weight: 600;">
                        <i class="fas fa-database"></i>
                        مدیریت داده‌های تستی
                    </h3>
                </div>
                <div class="card-body" style="padding: 30px;">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <button class="btn btn-success w-100" onclick="seedCities()" style="padding: 15px; border-radius: 10px;">
                                <i class="fas fa-city"></i>
                                اضافه کردن شهرها
                            </button>
                        </div>
                        <div class="col-md-6 mb-3">
                            <button class="btn btn-primary w-100" onclick="seedBarbershops()" style="padding: 15px; border-radius: 10px;">
                                <i class="fas fa-store"></i>
                                اضافه کردن آرایشگاه‌ها
                            </button>
                        </div>
                        <div class="col-md-6 mb-3">
                            <button class="btn btn-warning w-100" onclick="seedAllData()" style="padding: 15px; border-radius: 10px;">
                                <i class="fas fa-database"></i>
                                اضافه کردن تمام داده‌ها
                            </button>
                        </div>
                        <div class="col-md-6 mb-3">
                            <button class="btn btn-danger w-100" onclick="clearAllData()" style="padding: 15px; border-radius: 10px;">
                                <i class="fas fa-trash"></i>
                                پاک کردن تمام داده‌ها
                            </button>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <h5 style="color: #d4af37;">نتیجه:</h5>
                        <div id="result" style="background: rgba(42, 42, 42, 0.8); padding: 15px; border-radius: 10px; color: #fff; min-height: 100px; font-family: monospace;">
                            آماده برای اجرا...
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
async function seedCities() {
    showLoading('در حال اضافه کردن شهرها...');
    try {
        const response = await fetch('/SeedData/SeedCities');
        const result = await response.json();
        showResult(result);
    } catch (error) {
        showError('خطا در اضافه کردن شهرها: ' + error.message);
    }
}

async function seedBarbershops() {
    showLoading('در حال اضافه کردن آرایشگاه‌ها...');
    try {
        const response = await fetch('/SeedData/SeedBarbershops');
        const result = await response.json();
        showResult(result);
    } catch (error) {
        showError('خطا در اضافه کردن آرایشگاه‌ها: ' + error.message);
    }
}

async function seedAllData() {
    showLoading('در حال اضافه کردن تمام داده‌ها... (ممکن است چند دقیقه طول بکشد)');
    try {
        const response = await fetch('/SeedData/SeedAllData');
        const result = await response.json();
        showResult(result);
    } catch (error) {
        showError('خطا در اضافه کردن داده‌ها: ' + error.message);
    }
}

async function clearAllData() {
    if (!confirm('آیا مطمئن هستید که می‌خواهید تمام داده‌ها را پاک کنید؟')) {
        return;
    }
    
    showLoading('در حال پاک کردن تمام داده‌ها...');
    try {
        const response = await fetch('/SeedData/ClearAllData');
        const result = await response.json();
        showResult(result);
    } catch (error) {
        showError('خطا در پاک کردن داده‌ها: ' + error.message);
    }
}

function showLoading(message) {
    document.getElementById('result').innerHTML = `
        <i class="fas fa-spinner fa-spin"></i> ${message}
    `;
}

function showResult(result) {
    const resultDiv = document.getElementById('result');
    if (result.success) {
        resultDiv.innerHTML = `
            <i class="fas fa-check-circle" style="color: #28a745;"></i>
            <strong style="color: #28a745;">موفق:</strong> ${result.message}
        `;
    } else {
        resultDiv.innerHTML = `
            <i class="fas fa-exclamation-circle" style="color: #dc3545;"></i>
            <strong style="color: #dc3545;">خطا:</strong> ${result.message}
        `;
    }
}

function showError(message) {
    document.getElementById('result').innerHTML = `
        <i class="fas fa-exclamation-triangle" style="color: #ffc107;"></i>
        <strong style="color: #ffc107;">خطا:</strong> ${message}
    `;
}
</script>