@{
    ViewData["Title"] = "تست پنل ادمین";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-card">
    <div class="card-header">
        <h5><i class="bi bi-check-circle"></i> تست پنل ادمین</h5>
    </div>
    <div class="card-body">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle"></i>
                @ViewBag.Error
            </div>
        }
        else
        {
            <div class="alert alert-success">
                <i class="bi bi-check-circle"></i>
                @ViewBag.Message
            </div>

            <div class="row">
                <div class="col-md-6">
                    <h6>آمار سیستم:</h6>
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between">
                            <span>تعداد کاربران:</span>
                            <span class="badge bg-primary">@ViewBag.Stats.UsersCount</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>تعداد شهرها:</span>
                            <span class="badge bg-info">@ViewBag.Stats.CitiesCount</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>تعداد آرایشگاه‌ها:</span>
                            <span class="badge bg-success">@ViewBag.Stats.BarbershopsCount</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>تعداد خدمات:</span>
                            <span class="badge bg-warning">@ViewBag.Stats.ServicesCount</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>تعداد نوبت‌ها:</span>
                            <span class="badge bg-danger">@ViewBag.Stats.AppointmentsCount</span>
                        </li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h6>لینک‌های مفید:</h6>
                    <div class="list-group">
                        <a asp-controller="Admin" asp-action="Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-speedometer2"></i> داشبورد اصلی
                        </a>
                        <a asp-controller="Admin" asp-action="Users" class="list-group-item list-group-item-action">
                            <i class="bi bi-people"></i> مدیریت کاربران
                        </a>
                        <a asp-controller="Admin" asp-action="Cities" class="list-group-item list-group-item-action">
                            <i class="bi bi-geo-alt"></i> مدیریت شهرها
                        </a>
                        <a asp-controller="Admin" asp-action="Reports" class="list-group-item list-group-item-action">
                            <i class="bi bi-graph-up"></i> گزارشات
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>