@model City
@{
    ViewData["Title"] = "ویرایش شهر";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-card">
    <div class="card-header">
        <h5><i class="bi bi-pencil"></i> ویرایش شهر</h5>
    </div>
    <div class="card-body">
        <form asp-action="EditCity" method="post">
            <input asp-for="Id" type="hidden" />
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">نام شهر</label>
                        <input asp-for="Name" class="form-control" placeholder="نام شهر را وارد کنید">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Province" class="form-label">استان</label>
                        <input asp-for="Province" class="form-control" placeholder="نام استان را وارد کنید">
                        <span asp-validation-for="Province" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Cities" class="btn btn-secondary">
                    <i class="bi bi-arrow-right"></i> بازگشت
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check"></i> ذخیره تغییرات
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}