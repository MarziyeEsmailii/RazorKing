@model List<City>
@{
    ViewData["Title"] = "مدیریت شهرها";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5><i class="bi bi-geo-alt"></i> مدیریت شهرها</h5>
        <a asp-action="CreateCity" class="btn btn-primary btn-sm">
            <i class="bi bi-plus"></i> افزودن شهر جدید
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>نام شهر</th>
                        <th>استان</th>
                        <th>تعداد آرایشگاه‌ها</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model?.Any() == true)
                    {
                        @foreach (var city in Model)
                        {
                            <tr>
                            <td>
                                <strong>@city.Name</strong>
                            </td>
                            <td>@city.Province</td>
                            <td>
                                <span class="badge bg-info">@city.Barbershops.Count</span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="EditCity" asp-route-id="@city.Id" class="btn btn-outline-primary">
                                        <i class="bi bi-pencil"></i> ویرایش
                                    </a>
                                    @if (city.Barbershops.Count == 0)
                                    {
                                        <form asp-action="DeleteCity" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@city.Id" />
                                            <button type="submit" class="btn btn-outline-danger" 
                                                    onclick="return confirm('آیا مطمئن هستید که می‌خواهید این شهر را حذف کنید؟')">
                                                <i class="bi bi-trash"></i> حذف
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="btn btn-outline-secondary" disabled title="امکان حذف شهر با آرایشگاه وجود ندارد">
                                            <i class="bi bi-trash"></i> حذف
                                        </button>
                                    }
                                </div>
                            </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">شهری موجود نیست</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-4">
                <i class="bi bi-geo-alt display-1 text-muted"></i>
                <h5 class="mt-3">هیچ شهری ثبت نشده است</h5>
                <p class="text-muted">برای شروع، شهر جدیدی اضافه کنید.</p>
                <a asp-action="CreateCity" class="btn btn-primary">
                    <i class="bi bi-plus"></i> افزودن شهر جدید
                </a>
            </div>
        }
    </div>
</div>