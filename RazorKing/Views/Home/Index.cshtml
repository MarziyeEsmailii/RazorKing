</section>

<!-- City Selection -->
<section class="city-section" id="cities">
    <div class="city-section-background">
        <img src="~/img/pricing-bg.jpg" alt="background" class="city-bg-image">
        <div class="city-section-overlay"></div>
    </div>
    <div class="container">
        <div class="section-header text-center">
            <span class="section-badge">انتخاب مکان</span>
            <h2 class="section-title">شهر خود را انتخاب کنید</h2>
            <p class="section-subtitle">در تمام شهرهای استان گلستان خدمات ما را دریافت کنید</p>
        </div>
        
        <div class="cities-slider-container">
            <div class="cities-slider" id="citiesSlider">
                @foreach (var city in Model.Cities)
                {
                    <div class="city-slide">
                        <div class="city-card" data-city="@city.Id">
                            <div class="city-image">
                                <img src="~/img/pic-@(new Random().Next(2, 5)).jpg" alt="@city.Name" onerror="this.src='~/img/background.webp'">
                                <div class="city-overlay">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                            </div>
                            <div class="city-info">
                                <h4>@city.Name</h4>
                                <p>@city.Barbershops.Count(b => b.IsActive) آرایشگاه فعال</p>
                                <a href="@Url.Action("Index", "Booking", new { cityId = city.Id })" class="city-btn">
                                    انتخاب شهر
                                    <i class="fas fa-arrow-left"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <!-- Navigation Buttons -->
            <button class="slider-btn slider-btn-prev" onclick="slideCity(-1)">
                <i class="fas fa-chevron-right"></i>
            </button>
            <button class="slider-btn slider-btn-next" onclick="slideCity(1)">
                <i class="fas fa-chevron-left"></i>
            </button>
            
            <!-- Dots Indicator -->
            <div class="slider-dots">
                @for (int i = 0; i < Model.Cities.Count; i++)
                {
                    <span class="slider-dot @(i == 0 ? "active" : "")" onclick="currentSlide(@(i + 1))"></span>
                }
            </div>
        </div>
    </div>
</section>

