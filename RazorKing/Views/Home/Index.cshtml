        margin-bottom: 8px;
    }
    
    .stat-icon i {
        font-size: var(--font-size-base);
    }
    
    .stat-number {
        font-size: var(--font-size-xl);
    }
    
    .stat-label {
        font-size: 0.7rem;
    }
}

@media (max-width: 576px) {
    .stats-container {
        grid-template-columns: 1fr;
        gap: 15px;
        max-width: 200px;
        margin: 0 auto;
    }
    
    .stat-item {
        padding: 20px 15px;
    }
}

/* Add a subtle glow effect */
.stat-item:hover {
    box-shadow: 
        0 8px 25px rgba(212, 175, 55, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
}

/* Improve the overall stats section layout */
.hero-stats {
    position: relative;
}

.hero-stats::before {
    content: '';
    position: absolute;
    top: -20px;
    left: -20px;
    right: -20px;
    bottom: -20px;
    background: radial-gradient(circle at center, rgba(212, 175, 55, 0.05) 0%, transparent 70%);
