@model RazorKing.Models.Appointment
@{
    ViewData["Title"] = "تایید نوبت";
    Layout = "_LayoutModern";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card bg-dark text-white">
                <div class="card-header text-center bg-success">
                    <h2><i class="fas fa-check-circle"></i> نوبت شما ثبت شد</h2>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h4 class="text-warning">شماره نوبت: #@Model.Id</h4>
                    </div>
                    
                    <div class="row">
                        <div class="col-sm-6"><strong>نام مشتری:</strong></div>
                        <div class="col-sm-6">@Model.CustomerName</div>
                    </div>
                    <hr>
                    
                    <div class="row">
                        <div class="col-sm-6"><strong>شماره تماس:</strong></div>
                        <div class="col-sm-6">@Model.CustomerPhone</div>
                    </div>
                    <hr>
                    
                    <div class="row">
                        <div class="col-sm-6"><strong>آرایشگاه:</strong></div>
                        <div class="col-sm-6">@Model.Barbershop.Name</div>
                    </div>
                    <hr>
                    
                    <div class="row">
                        <div class="col-sm-6"><strong>آدرس:</strong></div>
                        <div class="col-sm-6">@Model.Barbershop.Address</div>
                    </div>
                    <hr>
                    
                    <div class="row">
                        <div class="col-sm-6"><strong>تاریخ:</strong></div>
                        <div class="col-sm-6">@Model.AppointmentDate.ToString("yyyy/MM/dd")</div>
                    </div>
                    <hr>
                    
                    <div class="row">
                        <div class="col-sm-6"><strong>ساعت:</strong></div>
                        <div class="col-sm-6">@Model.AppointmentTime.ToString(@"hh\:mm")</div>
                    </div>
                    <hr>
                    
                    <div class="row">
                        <div class="col-sm-6"><strong>خدمت:</strong></div>
                        <div class="col-sm-6">@Model.Service.Name</div>
                    </div>
                    <hr>
                    
                    <div class="row">
                        <div class="col-sm-6"><strong>مجموع هزینه:</strong></div>
                        <div class="col-sm-6 text-warning"><strong>@Model.TotalPrice.ToString("N0") تومان</strong></div>
                    </div>
                    <hr>
                    
                    <div class="row">
                        <div class="col-sm-6"><strong>بیعانه پرداخت شده:</strong></div>
                        <div class="col-sm-6 text-success"><strong>@Model.PaidAmount.ToString("N0") تومان</strong></div>
                    </div>
                    <hr>
                    
                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle"></i> نکات مهم:</h6>
                        <ul class="mb-0">
                            <li>15 دقیقه قبل از ساعت نوبت حضور یابید</li>
                            <li>مابقی مبلغ در آرایشگاه پرداخت خواهد شد</li>
                            <li>برای کنسلی حداقل 24 ساعت قبل اطلاع دهید</li>
                        </ul>
                    </div>
                    
                    <div class="text-center mt-4">
                        <a href="/" class="btn btn-warning">
                            <i class="fas fa-home"></i> بازگشت به صفحه اصلی
                        </a>
                        <a href="/Booking" class="btn btn-outline-warning">
                            <i class="fas fa-plus"></i> رزرو نوبت جدید
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>