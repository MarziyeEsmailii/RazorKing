@{
    ViewData["Title"] = "تست دیتابیس SQLite";
}

<div class="container mt-5" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-database"></i>
                        تست دیتابیس SQLite
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i>
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="mb-4">
                        <h5>مرحله 1: ایجاد داده‌های تستی</h5>
                        <p class="text-muted">
                            این عملیات داده‌های تستی شامل آرایشگاه، سرویس‌ها، نوبت‌ها و کاربران را ایجاد می‌کند.
                        </p>
                        <form asp-action="SeedTestData" method="post">
                            <button type="submit" class="btn btn-success btn-lg w-100">
                                <i class="fas fa-plus-circle"></i>
                                ایجاد داده‌های تستی
                            </button>
                        </form>
                    </div>

                    <hr class="my-4">

                    <div class="mb-4">
                        <h5>مرحله 2: اجرای تست‌های CRUD</h5>
                        <p class="text-muted">
                            این عملیات تست‌های خواندن، به‌روزرسانی و حذف داده‌ها را انجام می‌دهد.
                        </p>
                        <form asp-action="RunCrudTests" method="post">
                            <button type="submit" class="btn btn-info btn-lg w-100">
                                <i class="fas fa-play-circle"></i>
                                اجرای تست‌های CRUD
                            </button>
                        </form>
                    </div>

                    <hr class="my-4">

                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle"></i> راهنما:</h6>
                        <ul class="mb-0">
                            <li>ابتدا داده‌های تستی را ایجاد کنید</li>
                            <li>سپس تست‌های CRUD را اجرا کنید</li>
                            <li>نتایج در Console لاگ می‌شوند</li>
                            <li>می‌توانید چندین بار تست‌ها را اجرا کنید</li>
                        </ul>
                    </div>

                    <div class="mt-4">
                        <h6>اطلاعات دیتابیس:</h6>
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                نوع دیتابیس
                                <span class="badge bg-primary rounded-pill">SQLite</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                فایل دیتابیس
                                <span class="badge bg-secondary rounded-pill">RazorKing.db</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                کاربر ادمین
                                <span class="badge bg-success rounded-pill">admin@razorking.com</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                رمز عبور ادمین
                                <span class="badge bg-warning rounded-pill">Admin123!</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-right"></i>
                    بازگشت به پنل مدیریت
                </a>
            </div>
        </div>
    </div>
</div>
