@model RazorKing.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "فراموشی رمز عبور";
    Layout = "_LayoutModern";
}

<section class="auth-section">
    <div class="auth-container">
        <div class="row justify-content-center align-items-center" style="min-height: calc(100vh - 160px);">
            <div class="col-lg-5 col-md-8">
                <div class="auth-card">
                    <div class="auth-header">
                        <div class="auth-logo">
                            <img src="~/img/logo.jpg" alt="ریزر کینگ" onerror="this.src='~/img/logo.png'">
                            <span>ریزر کینگ</span>
                        </div>
                        <h2>بازیابی رمز عبور</h2>
                        <p>ایمیل خود را وارد کنید تا لینک بازیابی رمز عبور برای شما ارسال شود</p>
                    </div>
                    
                    <form asp-action="ForgotPassword" method="post" class="auth-form" data-validate="true">
                        <div asp-validation-summary="All" class="alert alert-danger" style="display: none;"></div>
                        
                        <div class="form-group">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope"></i>
                                ایمیل
                            </label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="ایمیل ثبت شده خود را وارد کنید" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn-auth">
                            <i class="fas fa-paper-plane"></i>
                            ارسال لینک بازیابی
                        </button>
                    </form>
                    
                    <div class="auth-footer">
                        <div class="auth-divider">
                            <span>یا</span>
                        </div>
                        
                        <div class="auth-links">
                            <p>رمز عبور خود را به خاطر آوردید؟</p>
                            <a href="@Url.Action("Login", "Account")" class="auth-link">
                                <i class="fas fa-sign-in-alt"></i>
                                ورود به حساب کاربری
                            </a>
                        </div>
                        
                        <div class="auth-links">
                            <p>حساب کاربری ندارید؟</p>
                            <a href="@Url.Action("Register", "Account")" class="auth-link">
                                <i class="fas fa-user-plus"></i>
                                ثبت نام کنید
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-7 d-none d-lg-block">
                <div class="auth-image">
                    <img src="~/img/sign-up-background.png" alt="بازیابی رمز عبور" class="img-fluid">
                    <div class="auth-overlay">
                        <div class="auth-content">
                            <h3>نگران نباشید!</h3>
                            <p>فراموش کردن رمز عبور اتفاق عادی است. ما به شما کمک می‌کنیم تا دوباره به حساب خود دسترسی پیدا کنید</p>
                            <div class="auth-features">
                                <div class="feature-item">
                                    <i class="fas fa-shield-alt"></i>
                                    <span>امنیت بالا در بازیابی</span>
                                </div>
                                <div class="feature-item">
                                    <i class="fas fa-clock"></i>
                                    <span>دریافت سریع لینک بازیابی</span>
                                </div>
                                <div class="feature-item">
                                    <i class="fas fa-key"></i>
                                    <span>تنظیم رمز عبور جدید</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/auth-fixed.css" asp-append-version="true">
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/auth.js" asp-append-version="true"></script>
}