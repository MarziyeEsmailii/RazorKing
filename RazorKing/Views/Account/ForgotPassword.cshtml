@model RazorKing.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "بازیابی رمز عبور";
    Layout = "_LayoutModern";
}

<div class="auth-page">
    <!-- بخش تصویر -->
    <div class="auth-visual">
        <div class="auth-images">
            <img src="~/img/photo_1_2025-11-01_19-21-48.jpg" alt="" class="auth-img active">
        </div>
    </div>

    <!-- بخش فرم -->
    <div class="auth-content">
        <div class="auth-box">
            <!-- لوگو -->
            <div class="auth-brand">
                <a href="/">
                    <img src="~/img/logo.jpg" alt="ریزر کینگ">
                </a>
            </div>

            <!-- عنوان -->
            <div class="forgot-header">
                <h2>بازیابی رمز عبور</h2>
                <p>ایمیل خود را وارد کنید</p>
            </div>

            <!-- فرم -->
            <div class="auth-form-container">
                <form asp-action="ForgotPassword" method="post" class="auth-form">
                    <div asp-validation-summary="All" class="auth-error"></div>
                    
                    <div class="input-group">
                        <input asp-for="Email" type="email" placeholder="ایمیل" required>
                        <span asp-validation-for="Email" class="field-error"></span>
                    </div>

                    <button type="submit" class="auth-btn">ارسال لینک بازیابی</button>
                </form>

                <div class="back-to-login">
                    <a href="/Account/Login" class="forgot-link">← بازگشت به ورود</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/auth-minimal.css">
    <style>
        .forgot-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .forgot-header h2 {
            font-size: 24px;
            font-weight: 600;
            color: var(--text);
            margin-bottom: 0.5rem;
        }
        
        .forgot-header p {
            color: var(--text-muted);
            font-size: 14px;
        }
        
        .back-to-login {
            text-align: center;
            margin-top: 1.5rem;
            padding-top: 1.5rem;
            border-top: 1px solid var(--border);
        }
    </style>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}