@{
    ViewData["Title"] = "ورود / ثبت نام - ریزر کینگ";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/auth-form.css" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="container">
        <div class="curved-shape"></div>
        <div class="curved-shape2"></div>
        
        <!-- Login Form -->
        <div class="form-box Login">
            <h2 class="animation" style="--D:0; --S:21">ورود</h2>
            <form id="loginForm" asp-controller="Account" asp-action="Login" method="post">
                <div class="input-box animation" style="--D:1; --S:22">
                    <input type="email" name="Email" required>
                    <label>ایمیل</label>
                    <i class="fas fa-envelope"></i>
                </div>
                <div class="input-box animation" style="--D:2; --S:23">
                    <input type="password" name="Password" required>
                    <label>رمز عبور</label>
                    <i class="fas fa-lock"></i>
                </div>
                <div class="remember-forgot animation" style="--D:3; --S:24">
                    <label>
                        <input type="checkbox" name="RememberMe"> مرا به خاطر بسپار
                    </label>
                    <a href="#">رمز عبور را فراموش کرده‌اید؟</a>
                </div>
                <div class="input-box animation" style="--D:4; --S:25">
                    <button class="btn" type="submit">ورود</button>
                </div>
                <div class="regi-link animation" style="--D:5; --S:26">
                    <p>حساب کاربری ندارید؟ <br> <a href="#" class="SignUpLink">ثبت نام کنید</a></p>
                </div>
            </form>
        </div>

        <!-- Login Info -->
        <div class="info-content Login">
            <h2 class="animation" style="--D:0; --S:20">خوش آمدید!</h2>
            <p class="animation" style="--D:1; --S:21">
                ما خوشحالیم که دوباره شما را در کنار خود داریم. 
                اگر به کمکی نیاز دارید، ما اینجا هستیم.
            </p>
        </div>

        <!-- Register Form -->
        <div class="form-box Register">
            <h2 class="animation" style="--li:17; --S:0">ثبت نام</h2>
            <form id="registerForm" asp-controller="Account" asp-action="Register" method="post">
                <div class="input-box animation" style="--li:18; --S:1">
                    <input type="text" name="FirstName" required>
                    <label>نام</label>
                    <i class="fas fa-user"></i>
                </div>
                <div class="input-box animation" style="--li:19; --S:2">
                    <input type="text" name="LastName" required>
                    <label>نام خانوادگی</label>
                    <i class="fas fa-user"></i>
                </div>
                <div class="input-box animation" style="--li:20; --S:3">
                    <input type="email" name="Email" required>
                    <label>ایمیل</label>
                    <i class="fas fa-envelope"></i>
                </div>
                <div class="input-box animation" style="--li:21; --S:4">
                    <input type="tel" name="PhoneNumber" required>
                    <label>شماره تماس</label>
                    <i class="fas fa-phone"></i>
                </div>
                <div class="input-box animation" style="--li:22; --S:5">
                    <select name="Role" id="UserType" required>
                        <option value="">نوع کاربری</option>
                        <option value="0">مشتری</option>
                        <option value="1">صاحب آرایشگاه</option>
                        <option value="2">آرایشگر</option>
                    </select>
                    <i class="fas fa-users"></i>
                </div>
                
                <!-- فیلدهای مخصوص صاحب آرایشگاه -->
                <div id="barbershopFields" style="display: none;">
                    <div class="input-box animation" style="--li:23; --S:6">
                        <input type="text" name="BarbershopName">
                        <label>نام آرایشگاه</label>
                        <i class="fas fa-store"></i>
                    </div>
                    <div class="input-box animation" style="--li:24; --S:7">
                        <input type="text" name="BarbershopAddress">
                        <label>آدرس آرایشگاه</label>
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="input-box animation" style="--li:25; --S:8">
                        <select name="CityId">
                            <option value="">انتخاب شهر</option>
                            <option value="1">گرگان</option>
                            <option value="2">گنبد کاووس</option>
                            <option value="3">علی آباد کتول</option>
                            <option value="4">آق قلا</option>
                            <option value="5">کردکوی</option>
                        </select>
                        <i class="fas fa-map-pin"></i>
                    </div>
                    <div class="input-box animation" style="--li:26; --S:9">
                        <textarea name="BarbershopDescription" rows="3"></textarea>
                        <label>توضیحات آرایشگاه</label>
                        <i class="fas fa-info-circle"></i>
                    </div>
                </div>

                <div class="input-box animation" style="--li:27; --S:10">
                    <input type="password" name="Password" required>
                    <label>رمز عبور</label>
                    <i class="fas fa-lock"></i>
                </div>
                <div class="input-box animation" style="--li:28; --S:11">
                    <input type="password" name="ConfirmPassword" required>
                    <label>تکرار رمز عبور</label>
                    <i class="fas fa-lock"></i>
                </div>
                <div class="input-box animation" style="--li:29; --S:12">
                    <button class="btn" type="submit">ثبت نام</button>
                </div>
                <div class="regi-link animation" style="--li:30; --S:13">
                    <p>قبلاً ثبت نام کرده‌اید؟ <br> <a href="#" class="SignInLink">وارد شوید</a></p>
                </div>
            </form>
        </div>

        <!-- Register Info -->
        <div class="info-content Register">
            <h2 class="animation" style="--li:17; --S:0">به ریزر کینگ خوش آمدید!</h2>
            <p class="animation" style="--li:18; --S:1">
                ما خوشحالیم که شما را در جمع خود داریم. 
                اگر به راهنمایی نیاز دارید، با ما در تماس باشید.
            </p>
        </div>
    </div>

    <!-- Loading Overlay -->
    <div id="loadingOverlay" class="loading-overlay">
        <div class="loading-spinner">
            <i class="fas fa-cut"></i>
            <span>در حال پردازش...</span>
        </div>
    </div>

    <script src="~/js/auth-form.js" asp-append-version="true"></script>
</body>
</html>