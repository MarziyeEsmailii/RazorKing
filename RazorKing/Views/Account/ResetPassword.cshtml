@model RazorKing.Models.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "تنظیم رمز عبور جدید";
    Layout = "_LayoutModern";
}

<div class="auth-page">
    <!-- کارت اصلی -->
    <div class="auth-card">
        <!-- بخش تصویر -->
        <div class="auth-visual">
            <div class="auth-images">
                <img src="~/img/photo_3_2025-11-01_19-21-48.jpg" alt="" class="auth-img active">
            </div>
            <div class="visual-overlay">
                <div class="brand-text">
                    <h3>ریزر کینگ</h3>
                    <p>تنظیم رمز جدید</p>
                </div>
            </div>
        </div>

        <!-- بخش فرم -->
        <div class="auth-content">
            <div class="auth-box">


            <!-- عنوان -->
            <div class="reset-header">
                <h2>رمز عبور جدید</h2>
                <p>رمز عبور قوی انتخاب کنید</p>
            </div>

            <!-- فرم -->
            <div class="auth-form-container">
                <form asp-action="ResetPassword" method="post" class="auth-form">
                    
                    <input asp-for="Token" type="hidden" />
                    <input asp-for="Email" type="hidden" />
                    
                    <div class="input-group">
                        <input asp-for="Password" type="password" placeholder="رمز عبور جدید" required>
                        <span asp-validation-for="Password" class="field-error"></span>
                    </div>

                    <div class="input-group">
                        <input asp-for="ConfirmPassword" type="password" placeholder="تکرار رمز عبور" required>
                        <span asp-validation-for="ConfirmPassword" class="field-error"></span>
                    </div>

                    <button type="submit" class="auth-btn">تنظیم رمز عبور</button>
                </form>

                <div class="back-to-login">
                    <a href="/Account/Login" class="forgot-link">← بازگشت به ورود</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/auth-minimal.css">
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}