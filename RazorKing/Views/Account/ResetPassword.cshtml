@model RazorKing.Models.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "تنظیم رمز عبور جدید";
    Layout = "_LayoutModern";
}

<section class="auth-section">
    <div class="auth-container">
        <div class="row justify-content-center align-items-center" style="min-height: calc(100vh - 160px);">
            <div class="col-lg-5 col-md-8">
                <div class="auth-card">
                    <div class="auth-header">
                        <div class="auth-logo">
                            <img src="~/img/logo.jpg" alt="ریزر کینگ" onerror="this.src='~/img/logo.png'">
                            <span>ریزر کینگ</span>
                        </div>
                        <h2>تنظیم رمز عبور جدید</h2>
                        <p>رمز عبور جدید و قوی برای حساب کاربری خود انتخاب کنید</p>
                    </div>
                    
                    <form asp-action="ResetPassword" method="post" class="auth-form" data-validate="true">
                        <div asp-validation-summary="All" class="alert alert-danger" style="display: none;"></div>
                        
                        <input asp-for="Token" type="hidden" />
                        <input asp-for="Email" type="hidden" />
                        
                        <div class="form-group">
                            <label asp-for="Password" class="form-label">
                                <i class="fas fa-lock"></i>
                                رمز عبور جدید
                            </label>
                            <div class="password-input">
                                <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور قوی انتخاب کنید" required />
                                <button type="button" class="password-toggle">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small class="form-text text-muted">
                                رمز عبور باید حداقل 8 کاراکتر و شامل حروف بزرگ، کوچک و عدد باشد
                            </small>
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="fas fa-lock"></i>
                                تکرار رمز عبور جدید
                            </label>
                            <div class="password-input">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="رمز عبور را مجدداً وارد کنید" required />
                                <button type="button" class="password-toggle">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn-auth">
                            <i class="fas fa-check"></i>
                            تنظیم رمز عبور جدید
                        </button>
                    </form>
                    
                    <div class="auth-footer">
                        <div class="auth-links">
                            <a href="@Url.Action("Login", "Account")" class="auth-link">
                                <i class="fas fa-arrow-right"></i>
                                بازگشت به صفحه ورود
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-7 d-none d-lg-block">
                <div class="auth-image">
                    <img src="~/img/hero-banner.jpg" alt="امنیت حساب کاربری" class="img-fluid">
                    <div class="auth-overlay">
                        <div class="auth-content">
                            <h3>امنیت حساب شما مهم است</h3>
                            <p>با تنظیم رمز عبور قوی، حساب کاربری خود را در امان نگه دارید</p>
                            <div class="auth-features">
                                <div class="feature-item">
                                    <i class="fas fa-shield-check"></i>
                                    <span>حفاظت پیشرفته از حساب</span>
                                </div>
                                <div class="feature-item">
                                    <i class="fas fa-key"></i>
                                    <span>رمز عبور رمزنگاری شده</span>
                                </div>
                                <div class="feature-item">
                                    <i class="fas fa-user-lock"></i>
                                    <span>دسترسی امن به حساب</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/auth-fixed.css" asp-append-version="true">
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/auth.js" asp-append-version="true"></script>
}