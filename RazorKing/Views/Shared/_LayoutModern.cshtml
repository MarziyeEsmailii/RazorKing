<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <meta name="description" content="ریزر کینگ - آرایشگاه مردانه لوکس در استان گلستان. رزرو آنلاین، خدمات حرفه‌ای، بهترین آرایشگران">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    
    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/modern-theme.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/cities-section.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/animations.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/persian-calendar.css" asp-append-version="true">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>


    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <div class="brand-logo">
                    <img src="~/img/logo.jpg" alt="ریزر کینگ" class="brand-logo-img" onerror="this.src='~/img/logo.png'">
                    <span>ریزر کینگ</span>
                </div>
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span></span>
                <span></span>
                <span></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">خانه</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#services">خدمات</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#cities">شهرها</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#about">درباره ما</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">تماس</a>
                    </li>
                </ul>
                
                <div class="navbar-actions">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="dropdown">
                            <button class="btn btn-user dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user"></i>
                                <span>@User.Identity.Name</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                @if (User.IsInRole("BarbershopOwner"))
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Dashboard", "Owner")"><i class="fas fa-tachometer-alt"></i> پنل مدیریت</a></li>
                                }
                                @if (User.IsInRole("Barber"))
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Dashboard", "Barber")"><i class="fas fa-cut"></i> پنل آرایشگر</a></li>
                                }
                                <li><a class="dropdown-item" href="#"><i class="fas fa-user"></i> پروفایل</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-calendar"></i> نوبت‌های من</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="dropdown-item">
                                            <i class="fas fa-sign-out-alt"></i> خروج
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "Account")" class="btn btn-outline-gold me-2">ورود</a>
                        <a href="@Url.Action("Register", "Account")" class="btn btn-gold">ثبت نام</a>
                    }
                    <a href="@Url.Action("Index", "Booking")" class="btn btn-primary ms-2">
                        <i class="fas fa-calendar-plus"></i>
                        رزرو نوبت
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="footer-section">
                            <div class="footer-logo">
                                <img src="~/img/logo.jpg" alt="ریزر کینگ" class="footer-logo-img" onerror="this.src='~/img/logo.png'">
                                <span>ریزر کینگ</span>
                            </div>
                            <p class="footer-desc">
                                بهترین آرایشگاه مردانه استان گلستان با خدمات حرفه‌ای و رزرو آنلاین
                            </p>
                            <div class="social-links">
                                <a href="#"><i class="fab fa-instagram"></i></a>
                                <a href="#"><i class="fab fa-telegram"></i></a>
                                <a href="#"><i class="fab fa-whatsapp"></i></a>
                                <a href="#"><i class="fab fa-twitter"></i></a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-lg-2 col-md-6 mb-4">
                        <div class="footer-section">
                            <h5 class="footer-title">خدمات</h5>
                            <ul class="footer-links">
                                <li><a href="#">کوتاهی مو</a></li>
                                <li><a href="#">اصلاح صورت</a></li>
                                <li><a href="#">رنگ و مش</a></li>
                                <li><a href="#">ماساژ و اسپا</a></li>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="col-lg-2 col-md-6 mb-4">
                        <div class="footer-section">
                            <h5 class="footer-title">شهرها</h5>
                            <ul class="footer-links">
                                <li><a href="#">گرگان</a></li>
                                <li><a href="#">گنبد کاووس</a></li>
                                <li><a href="#">علی آباد کتول</a></li>
                                <li><a href="#">آق قلا</a></li>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="footer-section">
                            <h5 class="footer-title">تماس با ما</h5>
                            <div class="contact-info">
                                <div class="contact-item">
                                    <i class="fas fa-phone"></i>
                                    <span>017-32345678</span>
                                </div>
                                <div class="contact-item">
                                    <i class="fas fa-envelope"></i>
                                    <span>info@razorking.ir</span>
                                </div>
                                <div class="contact-item">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span>گرگان، خیابان اصلی، پلاک 123</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="footer-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <p class="copyright">
                            © 2024 ریزر کینگ. تمامی حقوق محفوظ است.
                        </p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <div class="footer-links-bottom">
                            <a href="#">حریم خصوصی</a>
                            <a href="#">شرایط استفاده</a>
                            <a href="#">پشتیبانی</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Back to Top -->
    <button class="back-to-top" id="backToTop">
        <i class="fas fa-chevron-up"></i>
    </button>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site-common.js" asp-append-version="true"></script>
    <script src="~/js/persian-calendar.js" asp-append-version="true"></script>
    <script src="~/js/modern-app.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>