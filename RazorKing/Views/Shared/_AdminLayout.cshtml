<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - پنل مدیریت</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/fonts.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/font-overrides.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/icons-fix.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/buttons-unified.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-panel.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <nav class="admin-sidebar">
            <div class="sidebar-header">
                <h4><i class="bi bi-gear-fill"></i> پنل مدیریت</h4>
            </div>
            <ul class="sidebar-menu">
                <li>
                    <a asp-controller="Admin" asp-action="Index" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                        <i class="bi bi-speedometer2"></i> داشبورد
                    </a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="Users" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Users" ? "active" : "")">
                        <i class="bi bi-people"></i> کاربران
                    </a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="Cities" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Cities" ? "active" : "")">
                        <i class="bi bi-geo-alt"></i> شهرها
                    </a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="Barbershops" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Barbershops" ? "active" : "")">
                        <i class="bi bi-shop"></i> آرایشگاه‌ها
                    </a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="Services" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Services" ? "active" : "")">
                        <i class="bi bi-scissors"></i> خدمات
                    </a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="Appointments" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Appointments" ? "active" : "")">
                        <i class="bi bi-calendar-check"></i> نوبت‌ها
                    </a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="Reports" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Reports" ? "active" : "")">
                        <i class="bi bi-graph-up"></i> گزارشات
                    </a>
                </li>
                <li class="sidebar-divider"></li>
                <li>
                    <a asp-controller="AdminTest" asp-action="Index">
                        <i class="bi bi-bug"></i> تست سیستم
                    </a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house"></i> بازگشت به سایت
                    </a>
                </li>
                <li>
                    <a asp-controller="Account" asp-action="Logout">
                        <i class="bi bi-box-arrow-right"></i> خروج
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="admin-content">
            <!-- Top Bar -->
            <div class="admin-topbar">
                <div class="topbar-left">
                    <h5 class="page-title">@ViewData["Title"]</h5>
                </div>
                <div class="topbar-right">
                    <span class="user-info">
                        <i class="bi bi-person-circle"></i>
                        @User.Identity?.Name
                    </span>
                </div>
            </div>

            <!-- Page Content -->
            <div class="admin-main">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin-panel.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>