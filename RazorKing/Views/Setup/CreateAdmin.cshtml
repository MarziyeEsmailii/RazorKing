@{
    ViewData["Title"] = "ایجاد اکانت ادمین";
    Layout = "~/Views/Shared/_LayoutModern.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-shield"></i>
                        ایجاد اکانت ادمین
                    </h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i>
                            @ViewBag.Error
                        </div>
                    }
                    
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i>
                            @ViewBag.Message
                        </div>
                        
                        <div class="card mt-3">
                            <div class="card-header bg-info text-white">
                                <h5 class="mb-0">اطلاعات ورود ادمین</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <strong>ایمیل:</strong>
                                        <div class="form-control">@ViewBag.Email</div>
                                    </div>
                                    <div class="col-md-6">
                                        <strong>رمز عبور:</strong>
                                        <div class="form-control">@ViewBag.Password</div>
                                    </div>
                                </div>
                                
                                <div class="mt-3">
                                    <h6>مراحل دسترسی به پنل ادمین:</h6>
                                    <ol>
                                        <li>به صفحه <a href="@Url.Action("Login", "Account")" class="btn btn-sm btn-outline-primary">ورود</a> بروید</li>
                                        <li>با اطلاعات بالا وارد شوید</li>
                                        <li>از منوی کاربری گزینه "پنل مدیریت" را انتخاب کنید</li>
                                        <li>یا مستقیماً به <a href="@Url.Action("Index", "Admin")" class="btn btn-sm btn-outline-success">پنل ادمین</a> بروید</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            این صفحه برای ایجاد اکانت ادمین اولیه استفاده می‌شود.
                        </div>
                        
                        <div class="text-center">
                            <a href="@Url.Action("CreateAdmin")" class="btn btn-primary btn-lg">
                                <i class="fas fa-plus"></i>
                                ایجاد اکانت ادمین
                            </a>
                        </div>
                    }
                </div>
            </div>
            
            <div class="text-center mt-3">
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                    <i class="fas fa-home"></i>
                    بازگشت به صفحه اصلی
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: none;
        border-radius: 10px;
    }
    
    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }
    
    .form-control {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        font-family: monospace;
        font-weight: bold;
    }
    
    .alert {
        border-radius: 8px;
    }
</style>